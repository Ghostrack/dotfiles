{
	"extends": "/home/fran/vagrant/www/purplemashweb/scripts/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"allowUmdGlobalAccess": true,
		"allowUnreachableCode": false,
		"baseUrl": ".",
		"checkJs": true,
		"declaration": true,
		"declarationMap": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"isolatedModules": true,
		"module": "ES2020",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020",
		"paths": {
			"*": [
				"../grunt/node_modules/*",
				"../grunt/node_modules/@types/*"
			]
		}
	},
	"exclude": ["node_modules"],
	"include": [
		"./**/*.vue",
		"./**/*.ts"
	]
}
